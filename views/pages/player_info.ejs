<% include ../partials/header %>
<% include ../partials/menu %>
	<div class="container">
		<br>
		<div class="row">
			<div class="col-4">
				<div class="card">
				<!-- TODO: Modify the ejs code below, to conditionally set the image_src to be from our chosen playerinfo -->
				<%
				  var image_src = '../resources/img/helmet.jpg';

				  %>
				 <img class="card-img-top" id="player_img" src= "<%- image_src %>" alt="Image of Football player">
				  <div class="card-body mx-auto">
					<form class="form"action="/player_info/post" method="get">
						<select class="custom-select" name="player_choice" onchange="this.form.submit()">
							 <option selected>Select player</option>
							 <!-- TODO: Populate our select with playerinfo options
							 			For each playerinfo, set a new option with a value matching the palyer's id,
							 			but will display the playerinfo's name-->
							 <% if(players)
							 {
								 var playerinfoOption='';
								 players.forEach(function(item)
								 {
									 playerinfoOption += "<option value=" + item.id + ">" + item.name + "</option>";
								 }); %>
							 <%- playerinfoOption %>
						 	<% }
							%>

						</select>
					</form>
				  </div>
				</div>
			</div>
			<div class="col-8">
				<div class="table-responsive">
					<table class="table">
						<tr>
							<!-- TODO: Set playerinfo Information
							 			If a playerinfo has been selected, fill in their information in each of the fields below.
							 		    You'll nedropdown bar htmlleed to calculate here the playerinfo's average rushing, receiving, and passing yards.-->

											<th>Year</th>
											<td><% if(playerinfo){var year = playerinfo.year;} %><%- year %></td>
										</tr>
										<tr>
											<th>Major</th>
											<td><% if(playerinfo){var major = playerinfo.major;} %><%- major %></td>
										</tr>
										<tr>
											<th>Games Played</th>
											<td>	</td>
										</tr>
										<tr>
											<td>Passing Yards: <% if(playerinfo){var pYards = playerinfo.passing_yards;} %><%- pYards %></td>
											<td>Avg. Passing Yards:<%- pYards / 5 %></td>
										</tr>
										<tr>
											<td>Rushing Yards: <% if(playerinfo){var rYards = playerinfo.rushing_yards;} %><%- rYards %></td>
											<td>Avg. Rushing Yards: </td>
										</tr>
										<tr>
											<td>Receiving Yards: <% if(playerinfo){var recYards = playerinfo.receiving_yards;} %><%- recYards %></td>
											<td>Avg. Receiving Yards: </td>
										</tr>
					</table>
				</div>
			</div>
		</div>
	</div>

<% include ../partials/footer %>
